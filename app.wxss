/* weui组件样式 */
/* @import './components/weui-miniprogram/weui-wxss/dist/style/weui.wxss'; */
page {
  height: 100%;
  font-size: 14px;
}
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  background: #f3f4f5;
  width: 100%;
  min-height: 100%;
  color: #333;
}
.container-inner {
  width: 95%;
  margin: 0 auto;
}
.border-circle {
  border-radius: 15rpx;
  overflow: hidden;
}
.last-tips {
  width: 100%;
  text-align: center;
  margin: 20rpx auto;
}
.data-empty {
  text-align: center;
  margin: 50% auto;
}



/* 微信授权弹窗 */
.modal-content{
  padding:20rpx 0!important;
}
.main-content .dialog_title{
  height:95rpx;
  line-height:95rpx;
  color:rgba(0,0,0,.9);
  font-size:38rpx;
  border-bottom:2px solid rgba(223,223,224,.4);
  padding-top:20rpx;
  position:relative;
}
.main-content .dialog_title image{
  position:absolute;
  right:25rpx;
  top:0;
  bottom:0;
  margin:auto;
  width:27rpx;
}
.main-footer.btn_part{
  height:92rpx;
  line-height:92rpx;
  
  border-top:2px solid rgba(223,223,224,.4)
}
.main-footer.btn_part .confirm-btn{
  color:#64dda4;
  font-size:38rpx;
  border:0;
  outline:none;
}
.main-footer.btn_part .confirm-btn::after,.main-footer.bindWxPhone button::after{
  border:0;
  outline:none;
}
.authorization_con{
  padding-top:31rpx;
}
.authorization_con ._desc{
  line-height:97rpx;
  height:97rpx;
  color:rgba(0,0,0,.6);
  font-size:34rpx;
  position:relative;
}
.authorization_con ._desc text{
  line-height:97rpx;
  display:inline-block;
  border-bottom:2px solid rgba(223,223,224,.4)
}
.authorization_con ._desc ._bg{
  position:absolute;
  left:0;
  right:0;
  bottom:-2px;
  margin:auto;
  background:#59db9d;
  width:35rpx;
  height:4px;
}

.detail_desc{
  padding-top:17rpx;
  padding-bottom:45rpx;
}
.detail_desc .getYorsinfo{
  line-height:59rpx;
  color:rgba(17,17,17,.4);
  font-size:32rpx;
}
.detail_desc .getYorsinfo text{
  color:#59db9d;
  font-weight:600;
}
.detail_desc .infoUse text{
  display:block;
  text-align:center;
  line-height:45rpx;
  font-size:28rpx;
  color:rgba(17,17,17,.3);
}


/* 微信手机绑定 */
.main-content .content-row{
  margin:0 30rpx;
  position:relative;
  border-bottom:2px solid rgba(0,0,0,0.03);
  display:flex;
}
.main-content .content-row input{
  width:100%;
  height:75rpx;
  text-align:left;
  line-height:75rpx;
  padding-left:47rpx;
  box-sizing:border-box;
  position:relative;
}
.main-content .content-row image{
  width:22rpx;
  height:33rpx;
  position:absolute;
  left:5rpx;
  top:28rpx;
}
.main-content .content-row ._input{
  font-size:30rpx;
  color:rgba(0,0,0,.6);
}
.main-content .content-row .input{
  font-size:30rpx;
  color:rgba(0,0,0,.9);
}
.main-content .content-row.pwd_row image{
  width:25rpx;
  height:27rpx;
}
.main-content .content-row.pwd_row .security{
  background:#42c884;
  color:rgba(255,255,255,.8);
  padding:0 10rpx;
  font-size:28rpx;
  border-radius:8rpx;
  min-width:152rpx;
  height:57rpx;
  line-height:57rpx;
  margin-top:9rpx;
}
.main-footer.bindWxPhone{
  box-sizing:border-box;
  padding:24rpx 30rpx 68rpx;
  width:100%;
}
.main-footer.bindWxPhone button{
  background:#42c884;
  color:rgba(255,255,255,.8);
  border:0;
  outline:none;
  margin-bottom:23rpx;
}
.main-footer.bindWxPhone button.fastBind{
  color:rgba(17,17,17,.6);
  background:#fff;
  border:1px solid #f4f4f4;
  box-shadow:0rpx 0rpx 2rpx 0rpx rgba(86,135,233,0.61);
}
.main-content .content-row .placeholderstyle{
  color:rgba(16,16,16,.6);
  font-size:26rpx;
}

