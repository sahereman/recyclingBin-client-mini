<view class="container">
  <view class="container-inner border-circle identification">
   <form bindsubmit="formSubmit">
      <view class="form-area">
          <view>
            <text>姓名</text>
            <input name="realName" placeholder="请输入真实姓名" />
          </view>
          <view>
            <text>身份证号</text>
            <input name="idCard" type="idcard" bindinput="bindKeyInput" maxlength='18' placeholder="请输入身份证号码" />
            <image wx:if="{{image_show}}" src="../../assets/images/user/right_finish.png" />
          </view>
          <view>
            <text>手机号</text>
            <input type="number" placeholder="请输入手机号" value="{{phone}}" />
          </view>
      </view>
      <view>
        <button class="sub-btn border-circle" formType="submit">立即绑定</button>
      </view>
    </form>
  </view>
</view>