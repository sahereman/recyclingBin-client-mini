.userInfo {
  margin-top: 22rpx;
  background: #fff;
  box-shadow:0px 1px 24px 0px rgba(240,240,240,0.75);
}
.userInfo view {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 74rpx;
  border: 0;
  border-bottom: 2px solid #f7f7f7;
  line-height: 74rpx;
}
.avatar-image {
  margin: auto 26rpx;
  width: 49rpx;
  height: 49rpx;
  border-radius:50%;
}
.arrow-image {
  margin: auto 26rpx;
  width: 11rpx;
  height: 23rpx;
}
.userInfo view text {
  margin: auto 26rpx;
  color: #707070;
}


