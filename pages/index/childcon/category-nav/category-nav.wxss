.category-lists {
  display: flex;
  flex-direction: row;
}
.category-list-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.category-list-item image {
  margin: 20rpx auto;
  width: 90rpx;
  height: 90rpx;
}
.category-list-item text {
  font-size:28rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:30rpx;
  opacity:0.6;
}