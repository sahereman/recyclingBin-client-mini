.nearby-bin-content {
  position: relative;
  background-color: #fff;
  height: 320rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 5rpx 5rpx 0px rgba(0, 0, 0, 0.1);
}
.bg-image {
  position: absolute;
  right: 40rpx;
  top: 48rpx;
  width: 266rpx;
}
.bg-image image {
  width: 100%;
}
.module-title {
  display: flex;
  justify-content: flex-start;
  text-align: left;
  margin: 24rpx 0;
}
.module-title image {
  width: 27rpx;
  height: 33rpx;
  margin-right: 12rpx;
}
.module-title text {
  font-size: 30rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:30rpx;
  opacity:0.6;
}
.model-content {
  position: relative;
  height: 100%;
}
.module-content-title {
  padding-top: 50rpx;
  padding-left: 40rpx;
  height:29rpx;
  font-size:36rpx;
  font-weight:400;
  color:rgba(89,219,157,1);
  line-height:30rpx;
}
.module-content-info {
  padding-top: 40rpx;
  padding-left: 40rpx;
  width: 360rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:28rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:30rpx;
  opacity:0.6;
}
.model-content-btn {
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  padding: 10rpx;
  width:120rpx;
  height:45rpx;
  border:1px solid rgba(89,219,157,1);
  border-radius:30rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(89,219,157,1);
  line-height:45rpx;
  text-align: center;
}