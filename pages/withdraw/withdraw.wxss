.form-area {
  margin-top: 23rpx;
  margin-bottom: 24rpx;
  background: #fff;
  box-shadow:0px 1px 24px 0px rgba(240,240,240,0.75);
}
.form-area view {
  display: flex;
  width: 100%;
  height: 74rpx;
  border: 0;
  border-bottom: 2px solid #f7f7f7;
  line-height: 74rpx;
  color: #707070;
}
.form-area view text {
  width: 113rpx;
  margin-left: 27rpx;
  font-weight: bold;
}
.form-area view input {
  margin: auto;
  margin-right: 26rpx;
  text-align: right;
  width:450rpx;
}
.form-area view .money-num {
  margin: auto;
  margin-left: 26rpx;
  text-align: left;
}
.placeholder-class {
  color: #ccc;
  font-weight: bold;
}
.form-area view image {
  margin: auto 0;
  margin-right: 24rpx;
}
.name-image {
  width: 22rpx;
  height: 22rpx;
}
.bankcard-image {
  width: 26rpx;
  height: 18rpx;
}
.form-area view .unionpay-image {
  margin: auto;
  margin-right: 26rpx;
  width: 202rpx;
  height: 51rpx;
}
.form-area view .arrow-image {
  width: 11rpx;
  height: 23rpx;
  opacity: 0.4;
}
.form-area view .money-symbol {
  margin-left: 37rpx;
  width: 25rpx;
  height: 34rpx;
}
.sub-btn {
  width: 100%;
  height: 70rpx;
  text-align: center;
  background: #42C884;
  color: #d9f4e6;
  line-height: 70rpx;
  font-size: 16px;
  border-radius: 8rpx;
}