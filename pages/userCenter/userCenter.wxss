.content-bg {
  position: absolute;
  width: 100%;
  height: 227rpx;
  overflow: hidden;
}
.content-bg image {
  width: 100%;
  height: 100%;
  margin-top: -10rpx;
}
.user-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.user-info-part {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.user-info {
  display: flex;
}
.user-info-head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-info-edit {
  color: #fff;
  margin: auto;
  margin-left: 20rpx;
}
.user-info-name {
  margin-bottom: 25rpx;
  font-size: 35rpx;
}
.user-info-phone {
  font-size: 19rpx;
}
.user-info-head image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-info-name image {
  width: 25rpx;
  height: 25rpx;
}
.user-notification image {
  width: 47rpx;
  height: 47rpx;
}
/* 奖励金 */
.my-reward {
  height: 211rpx;
  background: #fff;
  margin: 28rpx auto;
}
/* 操作区 */
.operating-item {
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  height: 90rpx;
  background: #fff;
  margin-bottom: 8rpx;
  box-shadow:0px 1px 24px 0px rgba(240,240,240,0.75);
  line-height: 90rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
}
.item-left image{
  width: 35rpx;
  height: 35rpx;
}
.item-right image {
  width: 11rpx;
  height: 23rpx;
}