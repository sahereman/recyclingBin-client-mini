.content-bg {
  position: absolute;
  width: 100%;
  height: 227rpx;
  overflow: hidden;
}
.content-bg image {
  width: 100%;
  height: 100%;
}
.user-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.user-info-part {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.user-info {
  display: flex;
}
.user-info-head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-info-edit {
  color: #fff;
  margin: auto;
  margin-left: 20rpx;
}
.user-info-name {
  margin-bottom: 25rpx;
  font-size: 35rpx;
}
.user-info-name text {
  margin-right: 10rpx;
}
.user-info-phone {
  font-size: 24rpx;
}
.user-info-head image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-info-name navigator {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.user-info-name image {
  width: 25rpx;
  height: 25rpx;
}
.user-notification image {
  width: 63rpx;
  height: 60rpx;
}
/* 奖励金 */
.my-reward {
  height: 211rpx;
  background: #fff;
  margin: 28rpx auto;
}
.reward-head {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 24rpx;
  margin-bottom: 20rpx;
}
.reward-head text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.more-detail {
  color: #999;
  font-size: 28rpx;
}
.more-detail-hover {
  color: #5adb9e;
}
.reward-content {
  display: flex;
}
.reward-content-item {
  flex: 1;
  text-align: center;
  border-right: 1px dashed #e5e5e5;
}
.reward-content-item:last-of-type {
  border: 0;
}
.content-item-title {
  margin-bottom: 25rpx;
  font-size: 28rpx;
  color: #333;
}
.content-item-value {
  font-size: 30rpx;
  color: #5adb9e;
  font-weight: bold;
}

/* 操作区 */
.operating-item {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  background: #fff;
  margin-bottom: 8rpx;
  box-shadow:0px 1px 24px 0px rgba(240,240,240,0.75);
  line-height: 90rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  border-radius: 6rpx;
}
.operating-item navigator {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 0 25rpx;
  justify-content: space-between;
}
.operating-click {
  background: transparent;
  color: #5adb9e;
}
.item-left {
  display: flex;
}
.item-left image{
  width: 70rpx;
  height: 70rpx;
  margin: auto;
}
.item-left .help-icon,
.item-left .about-icon {
  padding: 0 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.item-right image {
  width: 11rpx;
  height: 23rpx;
}

.item-right .item-right_tip{
  color:rgba(0,0,0,.4);
  margin-right:10rpx;
}