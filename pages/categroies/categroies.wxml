<view class="container container-inner">
  <view class="nav_left">
    <block wx:for="{{cateItems}}" wx:key="id">
      <!--当前项的id等于item项的id，那个就是当前状态-->
      <!--用data-index记录这个数据在数组的下标位置，使用data-id设置每个item的id值，供打开2级页面使用-->
      <view class="nav_left_items {{curNav == item.cate_id ? 'active' : ''}}" 
            bindtap="switchRightTab" 
            data-index="{{index}}" 
            data-id="{{item.cate_id}}">
        {{item.cate_name}}
      </view>
    </block>
  </view>
  <view class="nav_right">
    <!--如果有数据，才遍历项-->
    <view wx:if="{{cateItems[curIndex].ishaveChild}}">
      <block wx:for="{{cateItems[curIndex].children}}" wx:key="id">
        <view class="nav_right_items">
          <navigator url="">
            <!--用view包裹图片组合，如果有图片就用，无图片提供就使用默认图片-->
            <view>              
              <block wx:if="{{item.image}}">
                <image src="{{item.image}}"></image>
              </block>
              <block wx:else>
                <image src="http://temp.im/50x30"></image>
              </block>
            </view>
            <!--如果有文字，就用文字；无文字就用其他-->
            <view wx:if="{{item.name}}">
              <text>{{item.name}}</text>
            </view>
            <view wx:else>
              <text></text>
            </view>
          </navigator>
        </view>
      </block>
    </view>
    <!--如果无数据，则显示数据-->
    <view wx:else>暂无数据</view>
  </view>
</view>