/* 回收箱列表样式 */
  .bin-list {
    display: flex;
    justify-content: space-between;
    padding: 32rpx 0;
    width: 100%;
    height: 227rpx;
    border-bottom: 1px solid #f7f7f7;
  }
  .bin-list-left {
    display: flex;
    justify-content: flex-start;
  }
  .bin-list-img {
    margin-right: 30rpx;
    margin-top: 30rpx;
    width: 44rpx;
    height: 56rpx;
  }
  .bin-list-img image {
    width: 100%;
    height: 100%;
  }
  .location-name {
    margin-bottom: 30rpx;
    width: 478rpx;
    height: 40rpx;
    font-size:36rpx;
    font-weight:500;
    color:rgba(0,0,0,1);
    line-height:36rpx;
    opacity:0.8;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .location-info {
    margin-bottom: 60rpx;
    width: 478rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(0,0,0,1);
    line-height:30rpx;
    opacity:0.6;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .location-status {
    display: inline-block;
    padding: 10rpx 20rpx;
    border:1px solid rgba(89,219,157,1);
    border-radius:30rpx;
    text-align: center;
    font-size:26rpx;
    line-height:45rpx;
    font-weight:400;
  }
  .location-status.error-status{
    border: 1px solid #e6bd41;
    color:#e6bd41;
    margin-right:15rpx;
  }
  .normal-location {
    position: fixed;
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    width: 95%;
    height:70rpx;
    bottom: 0;
    left: 0;
    line-height: 100rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 4px 6px 0px rgba(0, 0, 0, 0.02);
  }
  .normal-location-info {
    display: flex;
    justify-content: flex-start;
    margin: auto 0;
    width:100%;
  }
  .normal-location-info .local-info-part{
    width:570rpx;
    text-overflow:ellipsis;
  }
  .normal-location-img {
    width: 34rpx;
    height: 34rpx;
    margin: auto 0;
  }
  .normal-location-img image {
    width: 100%;
    height: 100%;
  }
  .change-module-btn {
    position: absolute;
    top: 97rpx;
    right: 29rpx;
    padding: 15rpx 30rpx;
    box-shadow:0px 21px 20px 1px rgba(0, 0, 0, 0.1);
    border-radius:30rpx;
    text-align: center;
    font-size: 30rpx;
  }
  .list-module {
    background:rgba(89,219,157,1);
    color: #fff;
  }