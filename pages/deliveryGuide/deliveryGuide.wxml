        <image class="step_sign" src="../../assets/images/home_nav/step_sign.png" mode="widthFix"></image>
      </view>
      <view class="sign_img">
       <image class="sign_img" src="../../assets/images/home_nav/step5.png" mode="widthFix"></image>
      </view>
    </view>
    <view class="about_item _right">
      <view class="sign_img">
       <image class="sign_img" src="../../assets/images/home_nav/step6.png" mode="widthFix"></image>
      </view>
      <view class="word_part">
        <image class="step_t" src="../../assets/images/home_nav/step6_t.png" mode="widthFix"></image>
        <view class="_bd1">查看奖励金</view>
